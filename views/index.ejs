<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Home</h1>
    <a href="/sign-up"><button>Sign Up</button></a>
    <a href="/log-in"><Button>Log In</Button></a>
    <% if (locals.user) { %>
    <div>User is logged in</div>
    <a href="/upload-file"><button>Upload File</button></a>
    <a href="/folder/create"><button>Create Folder</button></a>
    <h1>Folders...</h1>
    <% folders.forEach((folder) => { %>
    <h2><%= folder.name %></h2>
    <a href="/folder/update?name=<%= folder.name %>"
      ><button>Change Name</button></a
    >
    <form action="/folder/delete" method="post">
      <input type="hidden" name="folderId" value="<%= folder.id %>" />
      <button type="submit">Delete Folder</button>
    </form>
    <div><b>Files:</b></div>
    <% files.forEach((file) => { %> <% if (file.folderId === folder.id) { %>
    <div><%= file.url %></div>
    <a href="/details/<%= file.id %>"><button>Details...</button></a>
    <% } %> <% }) %> <% }) %> <% } %>
  </body>
</html>
